@model BloggingEngine.DataAccess.Post

<h1>Create a post in blog number @Model.BlogId</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" >
    <fieldset>
        <div class="form-group">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
            <label for="Title">Post Title</label>
            <input asp-for="@Model.Title" class="form-control" placeholder="The Title">
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
            <label asp-for="@Model.Content">Content:</label><br>
            <textarea asp-for="@Model.Content" class="form-control" placeholder="@Model.Content" rows="4"></textarea>
        </div>
        <div class="form-group">
            <span asp-validation-for="@Model.BlogId" class="text-danger"></span>
            <label for="BlogId">Blog</label>
            <input asp-for="@Model.BlogId" class="form-control" placeholder="The Blog id">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </fieldset>
     
</form>
