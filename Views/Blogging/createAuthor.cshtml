@model BloggingEngine.DataAccess.PersonModel

<h2>Create a User</h2>

<form asp-controller="blogging" method="post" asp-action="CreateAuthor">
        <fieldset>
          <div>
            <label asp-for="@Model.FirstName">FirstName:</label><br>
            <input asp-for="@Model.FirstName" />
          </div>
          <div>
            <label asp-for="@Model.LastName">LastName:</label><br>
            <input asp-for="@Model.LastName" />

          </div>
             <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </fieldset>
        
</form>